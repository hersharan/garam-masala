<h1>Register</h1>

{{#if alert}}
  <div class="form-group row justify-content-center">
    <div class="col-md-6">
      <div class="alert alert-danger" role="alert">
        <ul>
          {{#each alert.data}}
            <li>{{msg}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
{{/if}}

<form action="/register" method="POST">
  <div class="form-group row">
    <label for="salution" class="col-md-4 col-form-label text-md-right">Salutation</label>
    <div class="col-md-6">
      <select class="form-control" id="salution">
        <option>Mr.</option>
        <option>Mrs.</option>
        <option>Miss.</option>
      </select>
    </div>
  </div>

   <div class="form-group row">
    <label for="email" class="col-md-4 col-form-label text-md-right">First Name</label>
    <div class="col-md-6">
      <input type="text" id="first" class="form-control" name="first" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="email" class="col-md-4 col-form-label text-md-right">Last Name</label>
    <div class="col-md-6">
      <input type="text" id="last" class="form-control" name="last" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="username" class="col-md-4 col-form-label text-md-right">Username</label>
    <div class="col-md-6">
      <input type="text" id="username" class="form-control" name="username" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="email" class="col-md-4 col-form-label text-md-right">E-Mail Address</label>
    <div class="col-md-6">
      <input type="text" id="email" class="form-control" name="email" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>
    <div class="col-md-6">
      <input type="password" id="password" class="form-control" name="password" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="password" class="col-md-4 col-form-label text-md-right">DOB</label>
    <div class="col-md-6">
      <div id="from-datepicker" class="input-append date">
          <input class="form-control" data-format="dd/MM/yyyy" type="text" value="01/01/1985"></input><span class="add-on" />
      </div>
    </div>
  </div>

  <div class="form-group row">
    <label for="salution" class="col-md-4 col-form-label text-md-right">Role</label>
    <div class="col-md-6">
      <select class="form-control" id="role">
        <option>Customer</option>
        <option>Sales</option>
      </select>
    </div>
  </div>


  <div class="col-md-6 offset-md-4">
    <button type="submit" class="btn btn-primary">
      Register
    </button>
  </div>
</form>
